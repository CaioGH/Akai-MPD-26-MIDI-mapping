<!-- AKAI MPD 26 MIDI MAPPING FOR 2 DECKS.
   16 PADS;
   4 BANKS {A,B,C,D};
   6 FADERS;
   6 KNOBS.

  For beginners: Open the "INSTRUCTIONS.TXT" file to understand how personalize this code.

 -->

<?xml version="1.0" encoding="UTF-8"?>
<mapper device="SIMPLE_MIDI" author="DjCaiotic" description="Simple MIDI wrapper" version="705" date="24/08/2017" priority="-10">


<!-- PAD BANK A  / HOTCUES & EFFECTS -->
 
  <!-- Deck 1 -->
  <map value="0-1" action=" deck 1 hot_cue 1" />
  <map value="0-2" action=" deck 1 hot_cue 2" />
  <map value="0-3" action=" deck 1 hot_cue 3" />
  <map value="0-4" action=" deck 1 hot_cue 4" />

  <map value="0-5" action=" deck 1 #" />
  <map value="0-6" action=" deck 1 #" />
  <map value="0-7" action=" deck 1 #" />
  <map value="0-8" action=" deck 1 #" />

 <!-- Deck 2 -->
  <map value="0-9"  action=" deck 2 hot_cue 1" />
  <map value="0-10" action=" deck 2 hot_cue 2" />
  <map value="0-11" action=" deck 2 hot_cue 3" />
  <map value="0-12" action=" deck 2 hot_cue 4" />

  <map value="0-13" action=" deck 2 #" />
  <map value="0-14" action=" deck 2 #" />
  <map value="0-15" action=" deck 2 #" />
  <map value="0-16" action=" deck 2 #" />

<!-- Knobs -->
  <!-- Order: Left to Right -->

  <map value="0-CC11" action="deck 1 effect  default select" />
  <map value="0-CC12" action="deck 2 effect  default select" />
  <map value="0-CC13" action="deck 1 filter" />
  <map value="0-CC14" action="deck 2 filter" />
  <map value="0-CC15" action="deck 1 key" />
  <map value="0-CC16" action="deck 2 key" />


</mapper>
